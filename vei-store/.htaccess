<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Biarkan file/folder asli tetap bisa diakses
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Semua request lain arahkan ke index.html
  RewriteRule . /index.html [L]
</IfModule>
